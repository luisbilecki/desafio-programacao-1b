<% if @sale.errors.any? %>
<div class="alert alert-danger alert-dismissable">
    <button type="button" class="close" data-dismiss="alert" aria-hidden="true">Ã—</button>
    <ul>
        <% @sale.errors.full_messages.each do |message| %>
            <li><%= message %> </li>
        <% end %>
    </ul>
</div>
<% end %>

<div class="row">
  <div class="col-lg-2"></div>
  <div class="col-lg-8">
      <div class="panel panel-default">
        <div class="panel-heading">
            <%= action %>
        </div>
        <div class="panel-body">
            <!-- form -->
            <div class="col-lg-12">
              <%= form_for(@sale) do |f| %>

                <div class="row">
                  <div class="col-lg-6">
                    <div class="form-group">
                      <%= f.label :buyer %>
                      <%= f.text_field :buyer, class: "form-control",
                                     placeholder: Sale.human_attribute_name('buyer') %>
                    </div>
                  </div>

                  <div class="col-lg-6">
                    <div class="form-group">
                      <%= f.label :description %>
                      <%= f.text_field :description, class: "form-control",
                                     placeholder: Sale.human_attribute_name('description') %>
                    </div>
                  </div>
                </div>

                <div class="row">
                  <div class="col-lg-3">
                    <div class="form-group">
                      <%= f.label :price %>
                          <div class="input-group">
                            <div class="input-group-addon">$</div>
                              <%= f.text_field :price, class: "form-control",
                                     placeholder: Sale.human_attribute_name('price') %>
                          </div>
                    </div>
                  </div>

                  <div class="col-lg-3">
                    <div class="form-group">
                      <%= f.label :quantity %>
                      <%= f.number_field :quantity, class: "form-control",
                                     placeholder: Sale.human_attribute_name('quantity') %>
                    </div>
                  </div>

                  <div class="col-lg-6">
                    <div class="form-group">
                      <%= f.label :address %>
                      <%= f.text_field :address, class: "form-control",
                                     placeholder: Sale.human_attribute_name('address') %>
                    </div>
                  </div>
                </div>

                <div class="row">
                  <div class="col-lg-6">
                    <div class="form-group">
                      <%= f.label :supplier %>
                      <%= f.text_field :supplier, class: "form-control",
                                     placeholder: Sale.human_attribute_name('supplier') %>
                    </div>
                  </div>
                </div>

                <button type="submit" class="btn btn-default">Save</button>
              <% end %>
            </div>
        </div>

      </div>
  </div>
</div>
