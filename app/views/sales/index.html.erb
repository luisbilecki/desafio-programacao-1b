<div class="row">
  <div class="col-lg-1"></div>
  <div class="col-lg-10">
      <div class="panel panel-default">
        <div class="panel-heading">
          <%= t('messages.show', item: Sale.model_name.human(count: 2)) %>
          <%= link_to t('buttons.new'), new_sale_path, class: "btn btn-success btn-circle pull-right", style: "margin-top: -7px" %>
        </div>
        <div class="panel-body">

          <div class="table-responsive">
            <table class="table table-striped table-bordered table-hover">
              <thead>
                <tr>
                  <th><%= Sale.human_attribute_name('buyer') %></th>
                  <th><%= Sale.human_attribute_name('description') %></th>
                  <th><%= Sale.human_attribute_name('price') %></th>
                  <th><%= Sale.human_attribute_name('quantity') %></th>
                  <th><%= Sale.human_attribute_name('address') %></th>
                  <th><%= Sale.human_attribute_name('supplier') %></th>
                  <th colspan=2><%= t('app.actions') %></th>
                </tr>
              </thead>

              <tbody>
                <% if @sales.blank? %>
                <tr>
                  <td colspan=8>
                    <div class="text-center">
                      <%= t('messages.empty') %>
                    </div>
                  </td>
                </tr>
                <% end %>

                <% @sales.each do |sale| %>
                  <tr>
                    <td><%= sale.buyer %></td>
                    <td><%= sale.description %></td>
                    <td><%= number_to_currency(sale.price) %></td>
                    <td><%= sale.quantity %></td>
                    <td><%= sale.address %></td>
                    <td><%= sale.supplier %></td>
                    <td colspan=2 style="width: 75px">
                      <%= link_to edit_sale_path(sale.id), class: "btn btn-primary btn-circle" do %>
                          <i class="fa fa-edit"></i>
                      <% end %>
                      <%= link_to sale_path(sale.id), method: :delete, class: "btn btn-danger btn-circle",
                      data: {confirm: t('messages.delete', item: 'sale')} do %>
                              <i class="fa fa-times"></i>
                      <% end %>
                    </td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        </div>

        <div class="row">
          <div class="text-center">
               <%= paginate @sales %>
          </div>
        </div>

      </div>
  </div>
</div>
