<div class="row">
  <div class="col-lg-1"></div>
  <div class="col-lg-10">
      <div class="panel panel-default">
        <div class="panel-heading">
          Showing sales
          <%= link_to "New", new_sale_path, class: "btn btn-success btn-circle pull-right", style: "margin-top: -7px" %>
        </div>
        <div class="panel-body">

          <div class="table-responsive">
            <table class="table table-striped table-bordered table-hover">
              <thead>
                <tr>
                  <th>Buyer</th>
                  <th>Description</th>
                  <th>Price</th>
                  <th>Quantity</th>
                  <th>Address</th>
                  <th>Supplier</th>
                  <th colspan=2>Actions</th>
                </tr>
              </thead>

              <tbody>
                <% if @sales.blank? %>
                <tr>
                  <td colspan=8>
                    <div class="text-center">
                      Nothing was found!
                    </div>
                  </td>
                </tr>
                <% end %>

                <% @sales.each do |sale| %>
                  <tr>
                    <td><%= sale.buyer %></td>
                    <td><%= sale.description %></td>
                    <td><%= number_to_currency(sale.price) %></td>
                    <td><%= sale.quantity %></td>
                    <td><%= sale.address %></td>
                    <td><%= sale.supplier %></td>
                    <td colspan=2 style="width: 75px">
                      <%= link_to edit_sale_path(sale.id), class: "btn btn-primary btn-circle" do %>
                          <i class="fa fa-edit"></i>
                      <% end %>
                      <%= link_to sale_path(sale.id), method: :delete, class: "btn btn-danger btn-circle",
                      data: {confirm: "Are you sure you want to delete this sale?"} do %>
                              <i class="fa fa-times"></i>
                      <% end %>
                    </td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        </div>

        <div class="row">
          <div class="text-center">
               <%= paginate @sales %>
          </div>
        </div>

      </div>
  </div>
</div>
